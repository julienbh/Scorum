{
  "name": "scorum power",
  "description": "Get scorum now!",
  "version": "1.0.0.4",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "https://scorum.com/*",
    "tabs",
    "activeTab",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "short_name": "SCORUMPOWER",
  "web_accessible_resources": [
    "betting.html"
  ],
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": [
        "https://scorum.com/*"
      ],
      "js": [
        "vendor/jquery-1.12.4.min.js",
        "vendor/underscore-min.js",
        "vendor/scorum.min.js",
        "vendor/jquery.init.js",
        "vendor/vex.min.js",
        "vendor/mustache.min.js",
        "scorum.js"
      ],
      "css": [
        "vendor/vex.theme.css",
        "vendor/vex.css",
        "style.css"
      ]
    }
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Scorum Power",
    "default_icon": "icon.png"
  },
  "manifest_version": 2
}